rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // ğŸ”’ è¼”åŠ©å‡½æ•¸ï¼šæª¢æŸ¥æ˜¯å¦ç‚ºç®¡ç†å“¡
    // ========================================
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // ========================================
    // ä½¿ç”¨è€…è³‡æ–™
    // ========================================
    match /users/{userId} {
      // è®€å–ï¼šç™»å…¥ä½¿ç”¨è€…åªèƒ½è®€è‡ªå·±çš„è³‡æ–™ï¼Œç®¡ç†å“¡å¯è®€å…¨éƒ¨
      allow read: if isAuthenticated();

      // å»ºç«‹ï¼šç™»å…¥ä½¿ç”¨è€…å¯å»ºç«‹è‡ªå·±çš„æ–‡ä»¶ï¼Œæˆ–ç®¡ç†å“¡å¯å»ºç«‹
      allow create: if isAuthenticated() &&
        (request.auth.uid == userId || isAdmin());

      // æ›´æ–°ï¼šè‡ªå·±å¯æ›´æ–°è‡ªå·±çš„è³‡æ–™ï¼Œç®¡ç†å“¡å¯æ›´æ–°ä»»ä½•äºº
      allow update: if isAuthenticated() &&
        (request.auth.uid == userId || isAdmin());

      // åˆªé™¤ï¼šåƒ…ç®¡ç†å“¡
      allow delete: if isAdmin();
    }

    // ========================================
    // ä½¿ç”¨è€…å­¸ç¿’é€²åº¦
    // ========================================
    match /userProgress/{docId} {
      // Helper function to get employeeId from the users collection using auth.uid
      function getEmployeeId() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.employeeId;
      }

      // Check if the target userId matches either the auth.uid OR the user's Employee ID
      function isOwner(targetUserId) {
        return targetUserId == request.auth.uid || targetUserId == getEmployeeId();
      }

      // Read
      allow read: if isAuthenticated() && (resource == null || isOwner(resource.data.userId) || isAdmin());

      // Create
      allow create: if isAuthenticated() && (isOwner(request.resource.data.userId) || isAdmin());

      // Update
      allow update: if isAuthenticated() && (isOwner(resource.data.userId) || isAdmin());

      // Delete
      allow delete: if isAdmin();
    }

    // ========================================
    // èª²ç¨‹è³‡æ–™
    // ========================================
    match /courses/{courseId} {
      // è®€å–ï¼šæ‰€æœ‰å·²ç™»å…¥ä½¿ç”¨è€…ï¼Œä½†æ–°äººå°ˆå€èª²ç¨‹éœ€æœ‰æ¬Šé™
      allow read: if isAuthenticated() && (
        !('category' in resource.data) || 
        resource.data.category != 'newcomer' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.newcomerAccess == true ||
        isAdmin()
      );

      // å¯«å…¥ï¼šåƒ…ç®¡ç†å“¡
      allow write: if isAdmin();
    }

    // ========================================
    // é è¨­ï¼šæ‹’çµ•æ‰€æœ‰æœªåŒ¹é…çš„è·¯å¾‘
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
